{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"esModuleInterop": true,
		"paths": {
			"@core": ["core"],
			"@app/*": ["app/*"]
		}
	},

	"exclude": ["node_modules", "dist"]
}
